<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" prefHeight="25.0" spacing="3.0" styleClass="bottomBar" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.girbola.controllers.main.BottomController">
   <children>
      <Button fx:id="options_btn" mnemonicParsing="false" onAction="#options_btn_action" text="Options" />
      <Button fx:id="start_copyBatch_btn" mnemonicParsing="false" onAction="#start_copyBatch_btn_action" text="%startBatchCopy" />
      <Button fx:id="removeDuplicates_btn" mnemonicParsing="false" onAction="#removeDuplicates_btn_action" text="%removeDuplicates" />
      <Button fx:id="copySelected_btn" disable="true" mnemonicParsing="false" onAction="#copySelected_btn_action" text="Copy selected" visible="false" />
      <Button fx:id="copy_ok_date_btn" disable="true" mnemonicParsing="false" onAction="#copy_ok_date_btn_action" text="Copy good" visible="false" />
      <Button fx:id="workDir_btn" disable="true" mnemonicParsing="false" onAction="#workDir_btn_action" text="GOTO WorkDir" visible="false" />
      <Button fx:id="collect" disable="true" mnemonicParsing="false" onAction="#collect_action" text="Collect" visible="false" />
      <Button fx:id="addFolders_btn" disable="true" mnemonicParsing="false" onAction="#addFolders_btn_action" text="Add" visible="false">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <HBox alignment="TOP_RIGHT" prefHeight="25.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox fx:id="drive_pane" alignment="CENTER" spacing="7.0">
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
               <children>
                  <Label fx:id="drive_name" text="DN" />
                  <Label fx:id="drive_space" text="Drive size" />
                  <Label fx:id="drive_spaceLeft" text="Drive space left" />
                  <Label fx:id="drive_connected" text="Drive is connected" />
               </children>
            </HBox>
            <Button fx:id="help_btn" mnemonicParsing="false" onAction="#help_btn_action" text="Help" />
         </children>
         <HBox.margin>
            <Insets />
         </HBox.margin>
         <padding>
            <Insets right="1.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets left="1.0" />
   </padding>
</HBox>
