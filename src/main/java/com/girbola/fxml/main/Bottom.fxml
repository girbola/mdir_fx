<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<HBox alignment="CENTER_LEFT" spacing="3.0" styleClass="bottomBar" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.girbola.controllers.main.BottomController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="2.0">
         <children>
            <Button fx:id="options_btn" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#options_btn_action" text="Options" wrapText="true">
               <font>
                  <Font size="9.0" />
               </font>
               <graphic>
                  <FontIcon iconColor="WHITE" iconLiteral="bi-gear" iconSize="20" />
               </graphic>
            </Button>
            <Button fx:id="start_copyBatch_btn" mnemonicParsing="false" onAction="#start_copyBatch_btn_action" styleClass="bottomButton" text="%startBatchCopy" wrapText="true">
               <font>
                  <Font size="9.0" />
               </font>
            </Button>
            <Button fx:id="copySelected_btn" mnemonicParsing="false" onAction="#copySelected_btn_action" styleClass="bottomButton" text="Copy selected" wrapText="true">
               <font>
                  <Font size="9.0" />
               </font>
            </Button>
            <Button fx:id="copy_ok_date_btn" mnemonicParsing="false" onAction="#copy_ok_date_btn_action" styleClass="bottomButton" text="Copy good" wrapText="true">
               <font>
                  <Font size="9.0" />
               </font>
            </Button>
            <Button fx:id="workDir_btn" mnemonicParsing="false" onAction="#workDir_btn_action" styleClass="bottomButton" text="GOTO WorkDir" wrapText="true">
               <font>
                  <Font size="9.0" />
               </font>
            </Button>
            <Button fx:id="collect" mnemonicParsing="false" onAction="#collect_action" styleClass="bottomButton" text="Collect" wrapText="true">
               <font>
                  <Font size="9.0" />
               </font>
            </Button>
            <Button fx:id="addFolders_btn" mnemonicParsing="false" onAction="#addFolders_btn_action" styleClass="bottomButton" text="Add" wrapText="true">
               <font>
                  <Font size="9.0" />
               </font>
            </Button>
            <Button fx:id="showWorkdir_btn" mnemonicParsing="false" onAction="#showWorkdir_btn_action" styleClass="bottomButton" text="Work dir" wrapText="true">
               <font>
                  <Font size="9.0" />
               </font>
            </Button>
            <Label text="Label" />
            <Label fx:id="debug_pref_width" text="Label" />
         </children>
         <HBox.margin>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </HBox.margin>
      </HBox>
      <HBox alignment="TOP_RIGHT" prefHeight="25.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox fx:id="drive_pane" alignment="CENTER_RIGHT" spacing="7.0">
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
               <children>
                  <Label fx:id="drive_name" text="DN">
                     <font>
                        <Font size="9.0" />
                     </font></Label>
                  <Label fx:id="drive_space" text="%driveSize">
                     <font>
                        <Font size="9.0" />
                     </font>
                  </Label>
                  <Label text="/">
                     <font>
                        <Font size="9.0" />
                     </font>
                  </Label>
                  <Label fx:id="drive_spaceLeft" text="%driveSpaceLeft">
                     <font>
                        <Font size="9.0" />
                     </font>
                  </Label>
                  <Label fx:id="drive_connected" text="   ">
                     <font>
                        <Font size="9.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children>
         <HBox.margin>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </HBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets left="1.0" />
   </padding>
</HBox>
