<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <StackPane id="stackPane" maxHeight="200.0" prefHeight="200.0" VBox.vgrow="NEVER">
         <children>
            <Label id="imageNumber" alignment="TOP_RIGHT" text="Label" StackPane.alignment="TOP_RIGHT">
               <StackPane.margin>
                  <Insets />
               </StackPane.margin>
            </Label>
            <ImageView fitHeight="150.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="CENTER">
               <image>
                  <Image url="@../../../../../../../../../Downloads/20210518_183255.jpg" />
               </image>
            </ImageView>
         </children>
      </StackPane>
      <TextField id="fileName_ta" VBox.vgrow="ALWAYS" />
      <HBox id="bottom" fillHeight="false" VBox.vgrow="NEVER">
         <children>
            <Button id="accept" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" text="Button">
               <graphic>
                  <FontIcon iconColor="#15fc3f" iconLiteral="bi-check" iconSize="25" />
               </graphic>
            </Button>
            <TextField id="fileDate_tf" editable="false" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </children>
</VBox>
